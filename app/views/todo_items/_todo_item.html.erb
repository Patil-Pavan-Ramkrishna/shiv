<div class="row clearfix">

  <% if todo_item.completed? %>

  <div class="complete">
    <%= link_to "Mark As Complete", complete_todo_list_todo_item_path(@todo_list,todo_item.id), method: :patch %>
  </div>
  <div class="todo_item">
    <p><%= todo_item.content %></p>
  </div>
  <div class="trash">
    <%= link_to "Delete", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, date: { confirm: "Are You Sure?" } %>
  </div>

  <% else %>

  <div class="complete">
    <%= link_to "Mark As Complete", complete_todo_list_todo_item_path(@todo_list,todo_item.id), method: :patch %>
  </div>
  <div class="todo_item">
    <p><%= todo_item.content %></p>
  </div>
  <div class="trash">
    <%= link_to "Delete", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, date: { confirm: "Are You Sure?" } %>
  </div>
  <% end %>
</div>
